<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6FAFF"
    tools:context=".SplashActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SQL Sorgu Çevirici"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:id="@+id/logo"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bu uygulamayı kullanarak SQL sorularınızı sorabilir ve ChatGPT teknolojisini kullanarak yanıtlar alabilirsiniz."
        android:textColor="@color/black"
        android:textStyle="italic"
        android:textSize="16sp"
        android:gravity="center"
        android:layout_below="@id/logo"
        android:layout_marginTop="20dp"/>

    <ImageView
        android:layout_width="300dp"
        android:id="@+id/imageview"
        android:layout_height="300dp"
        android:layout_centerInParent="true"
        android:src="@drawable/logom" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/splashToHome"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="Devam Et"
        android:background="#0A3F8D"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:layout_marginBottom="40dp"/>

</RelativeLayout>